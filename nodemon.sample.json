{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "node": "npm start"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "*.*"
  ],
  "env": {
    "NODE_ENV": "development",
    "HTTP": false,
    "HOST": "localhost",
    "PORT": 3000,
    "REST_API_ROOT": "/api",
    "LEGACY_EXPLORER": false,
    "LIVE_RELOAD": false,
    "MONGODB_URI": "mongodb://localhost/hash"
  },
  "ext": "js json"
}