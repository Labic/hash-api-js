{
  "name": "Tweet",
  "plural": "tweets",
  "base": "PersistedModel",
  "options": {
    "mongodb": {
      "collection": "tweets"
    }
  },
  "properties": {
    "status": {
      "type": "TweetStatus"
    },
    "theme": {
      "type": "string"
    },
    "categories": {
      "type": "string"
    }
  },
  "scope": {
    "limit": 25
  },
  "acls": [{
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ]
}
